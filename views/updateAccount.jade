html 
    head
        link(rel="stylesheet", href="./styles/updateAccount.css")
        title Helados Vagabundos
    
    body
        nav()
            img(src="https://static.vecteezy.com/system/resources/previews/014/179/735/original/ice-cream-doodle-png.png" width="80px" height="80px" id=logo alt="Logo image" style="margin-left: 10px;")
            ul(class="navigationBar")
                li()
                    form(method="post" action="/backHome" class="navigationBarForm")
                        button() Home
                    form(method="post" action="/accountMenu" class="navigationBarForm")
                        button() Account
                    form(method="post" action="/addProductMenu" class="navigationBarForm")
                        button() Add Product
        
        div(class="container")
            form(method="post" action="/updateUser")
                div(class="image")
                    image(id = "ProductImage" img src=user.img)
                
                div(class="nombre")
                    label() Username
                    input(id="image" type="text" placeholder="Username" name="user")
                
                div(class="precio")
                    label() Password
                    input(id="name" type="text" placeholder="Password" name="pass")
                
                div(class="agregar")
                    input(id="add" type="submit" value="Update")